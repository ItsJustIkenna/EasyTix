# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://postgres:password@localhost:5432/easytix_dev"

# Application URL
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# JWT Secret (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-super-secret-jwt-secret-change-this-in-production"

# Stripe Configuration
# Get from: https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/webhooks
# For local testing: stripe listen --forward-to localhost:3000/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET="whsec_..."

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email Configuration (Resend)
RESEND_API_KEY="re_xxxxxxxxx_xxxxxxxxxxxxxxxxxxxxxxxx"
FROM_EMAIL="noreply@easytix.com"

# Environment
NODE_ENV="development"

# File Upload (Vercel Blob or Supabase Storage)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxx"

# Optional: Sentry for Error Tracking
SENTRY_DSN="https://xxxxxxxxx@sentry.io/xxxxxxxxx"

# Optional: Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Admin Configuration
SUPER_ADMIN_EMAIL="admin@easytix.com"
SUPER_ADMIN_PASSWORD="change-this-password"

# Feature Flags (Optional)
ENABLE_REGISTRATION="true"
ENABLE_ORGANIZER_SIGNUP="true"
MAINTENANCE_MODE="false"

# Rate Limiting (Optional)
REDIS_URL="redis://localhost:6379"

# Webhook URLs for external services
WEBHOOK_BASE_URL="https://yourdomain.com/api/webhooks"